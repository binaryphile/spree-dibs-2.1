nav.pagination {
  float: right;
  margin-bottom: 5px;
}

ul#products li {
  clear: right;
}

ul#products li a {
  height: 104px;
}

ul#products li a.info {
  height: 75px;
  color: #888;
  margin-bottom: 20px;
  border-bottom: none;
}

ul#products li .price {
  padding-bottom: 5px;
}

#product-images #main-image {
  padding: 5px;
}

.row {
  margin-top: 10px;
}

#logo {
  margin-top: 20px;
}

.AuthorizeNetSeal {
  float: right;
  padding: 10px 0;
}

#ad_hoc_options dl dt, #ad_hoc_options dl dd {
  display: block;
  width: 100%;
  padding: 5px 0 0;
}

#ad_hoc_options dl dd {
  margin-left: 0;
}

#logo img {
  background: url(<%= asset_path 'store/readers-choice-2014.png' %>) no-repeat right 58px;
  padding-right: 100px;
}

.sale-heading {
  text-transform: uppercase;
  color: #00397D;
}

.sale-right {
  float: right;
  margin-left: 15px;
}

#product-price {
  text-transform: uppercase;
}

.sale-text {
  font-size: 18px;
  font-weight: bold;
  color: #00adee;
}

.sale-price, .sale-price h6 {
  color: red;
}

.product-image {
  position: relative;
}

.sale-tag {
  position: absolute;
  right: -2px;
  top: -2px;
}

a[href="/t/categories/on-sale"]{
  color: red;
  font-weight: bold;
}

.sale-notice {
  font-size: small;
  font-weight: normal;
  color: red;
}
